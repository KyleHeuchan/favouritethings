

<section id="contents" class="contents-section bg-light">
<div class="container">
    {{#each info}}
      <div class="row align-items-center mb-4 mb-lg-5 desc">
        <div class="col-xl-8 col-lg-7">
          <a href="/{{game_name}}">
          <img src="/images/{{game_img}}" alt="Video Game pictures" class="img-fluid md-3 md-lg-0">
          </a>
        </div>
        <div class="col-xl-4 col-lg-5">
          <div class="contents-text">
            <h4>{{game_name}}</h4>
            <p>{{game_desc}}</p>
          </div>
        </div>
      </div>
    {{/each}}
</div>
</section>
